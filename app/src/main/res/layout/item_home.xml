<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/horizontal_margin"
    android:paddingTop="@dimen/vertical_margin"
    android:paddingRight="@dimen/horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/itemHomeNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorLightGray"
            android:textStyle="bold"
            tools:text="gugaknie" />

        <ImageView
            android:id="@+id/itemHomeRettiwtIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_small"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_forward" />

        <TextView
            android:id="@+id/itemHomeRettiwtNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_small"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="gugaknie" />

    </LinearLayout>

    <TextView
        android:id="@+id/itemHomeBodyTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin_detail"
        tools:text="@tools:sample/lorem" />

    <android.support.v7.widget.CardView
        android:id="@+id/itemHomeCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_image_height"
        android:layout_marginTop="@dimen/vertical_margin"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/itemHomeIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/itemHomeStarsLl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/vertical_margin"
            android:paddingBottom="@dimen/vertical_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_star" />

            <TextView
                android:id="@+id/itemHomeStarsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/horizontal_margin_small"
                android:paddingEnd="@dimen/horizontal_margin"
                android:textColor="@color/colorGold"
                android:textStyle="bold"
                tools:text="0" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemHomeRettiwtLl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/vertical_margin"
            android:paddingBottom="@dimen/vertical_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_forward" />

            <TextView
                android:id="@+id/itemHomeRettiwtsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/horizontal_margin_small"
                android:paddingEnd="@dimen/horizontal_margin"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                tools:text="0" />

        </LinearLayout>

        <TextView
            android:id="@+id/itemHomeBodyDateTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/colorDarkGray"
            tools:text="0" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDarkestGray" />


</LinearLayout>